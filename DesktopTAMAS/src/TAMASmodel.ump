{
  name;
  id; 
}

class Applicant
{
  isA User;
  cGPA;
  skills;  
  Boolean isGraduate;
  
  1 applicant <@>- 0..3 Application applications;
  1 applicant <@>- 0..3 Assignment assignments;
}

class Instructor
{
  isA User;
}

class Department
{
  isA User;
}

class Assignment
{
  autounique id;
  feedback;  
}

class Application 
{
  autounique id;
  Boolean isAccepted;
  experience;
  courseGPA;
}

class Job
{
  Integer maxHours;
  Double wage;
  Date deadline;
  requiredSkills;
  requiredCourseGPA;
  requiredCGPA;
  requiredExperience;
  1 job <@>- 0..1 Assignment assignment;
  1 job <@>- * Application applications;
}

