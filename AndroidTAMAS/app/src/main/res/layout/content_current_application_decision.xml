<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/current_application_linearlayout_decision"
    android:fitsSystemWindows="true"
    tools:context="ecse321.group12.tamas.androidtamas.CurrentApplicationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:weightSum="1"
        >

        <TextView
            android:id="@+id/fragment_current_applications_decision_tv_application_position_and_type"
            android:inputType="none"
            android:textIsSelectable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:ems="12"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_current_applications_decisions_buttonlabel_decision"
            android:id="@+id/fragment_current_applications_button_decision"
            />
    </LinearLayout>
</LinearLayout>
