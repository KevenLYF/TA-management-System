<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_current_application"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ecse321.group12.tamas.androidtamas.CurrentApplicationActivity"
    tools:showIn="@layout/activity_current_application">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/current_application_button_return"
        android:text="@string/current_application_buttonlabel_return"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_above="@id/current_application_button_return"
        android:id="@+id/current_application_graphical_divider"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/current_application_tv_no_applications"
        android:layout_centerInParent="true"
        android:text="@string/current_application_tv_no_applications_text"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:paddingBottom="100dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/current_application_graphical_divider"
        android:id="@+id/current_application_scgroup_inflation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/current_application_linearlayout_inflation_target"
            >
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
